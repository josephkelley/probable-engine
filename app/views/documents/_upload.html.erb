<div id="multiUploadContainer">
  <%= parent.fields_for :documents do |doc_field| %>
    <div class="multi-upload-group">
      <a href="#" class="multiUploadDeleteField"><span class="glyphicon glyphicon-remove text-danger"></a>
      <%= doc_field.text_field :description, placeholder: 'Document Description', class: 'multi-upload-desc input-sm' %>
      <% if doc_field.object.try(:new_record?) %>
        <%= doc_field.file_field :uploaded_file, class: "multi-upload-file" %>
      <% else %>
        <%= content_tag :span, doc_field.object.original_filename, class: "multi-upload-file", style: 'overflow: hidden' %>
      <% end %>
    </div>
  <% end %>
</div>
<a href="#" id="multiUploadMoreFields">+ More Files</a>
