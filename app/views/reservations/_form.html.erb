<%= form_for @reservation do |f| %>
  <div class="form-group col-xs-12">
    <%= f.label :item, 'Choose Cart', class: 'control-label col-xs-2' %>
    <div class="col-xs-6">
      <%= f.select :item_id, options_from_collection_for_select(Item.all, 'id', 'basic_info'), {}, class: "selectpicker form-control" %>
    </div>
  </div>

  <div class="form-group col-xs-12">
    <%= f.label :reservation_type, 'Reservation Type', class: 'control-label col-xs-2'%>
    <div class="col-xs-6">
      <%= f.text_field :reservation_type, required: true, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group col-xs-12">
    <%= f.label :start_time, 'Start Time', class: 'control-label col-xs-2' %>
    <div class="col-xs-6">
      <%= f.date_field :start_time, required: true, class: "form-control" %>
    </div>
  </div>

  <div class="form-group col-xs-12">
    <%= f.label :end_time, 'End Time', class: 'control-label col-xs-2' %>
    <div class="col-xs-6">
      <%= f.date_field :end_time, required: true, class: "form-control" %>
    </div>
  </div>

  <div class="form-group col-xs-12">
    <div class="col-xs-offset-2 col-xs-10">
      <%= f.submit class: "btn btn-primary"%>
      <%= link_to 'Back', reservations_path, class: "btn btn-default" %>
    </div>
  </div>
<% end %>
