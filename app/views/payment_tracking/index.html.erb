<% provide(:page_header, 'Payment Tracking') %>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Rental Id</th>
      <th>Reservation Id</th>
      <th>Renter Department/Name</th>
      <th>Days Since Reservation</th>
      <th class="min-width">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @rentals.each do |rental| %>
      <tr>
        <td><%= rental.id %></td>
        <td><%= rental.reservation_id %></td>
        <td><%= if rental.department then rental.department.name else rental.renter.full_name end %></td>
        <td><%= (Time.current-rental.created_at) / 1.days %></td>
        <td class="min-width">
          <%= link_to (content_tag(:span, nil, class: "glyphicon glyphicon-eye-open")+" View"), department, class: "btn btn-xs btn-success" %>
          <%= link_to (content_tag(:span, nil, class: "glyphicon glyphicon-edit")+" Edit"), edit_department_path(department), class: "btn btn-xs btn-primary" %>
          <%= link_to (content_tag(:span, nil, class: "glyphicon glyphicon-trash")+" Delete"), department, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
